<!DOCTYPE HTML>
<html>
  <body>
    <h4>film confirmation</h4>
    <button onclick="confirmation()">press the button</button>
    <p id="demo"></p>
    <script>
      function confirmation()
      {
        let txt;
        if(confirm("will you go to the film"))
        txt = " yes , user will go to the film";
        else
        txt = " No , user will go to the film";
        document.getElementById("demo").innerHTML = txt;
      }
    </script>
    
  </body>
</html>
